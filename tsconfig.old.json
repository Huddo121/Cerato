{
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022"
    ],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
